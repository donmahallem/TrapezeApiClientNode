{
    "name": "@donmahallem/trapeze-api-client",
    "version": "3.0.1",
    "description": "Node Client to consume the Trapeze Api",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "private": false,
    "scripts": {
        "test": "mocha",
        "test:watch": "mocha --watch",
        "start": "npm run build:live",
        "build:live": "nodemon",
        "build": "tsc",
        "test:coverage": "nyc npm run test",
        "lint": "tslint -c tslint.json -p tsconfig-lint.json src/**/*.ts",
        "lint:fix": "tslint --fix -c tslint.json -p tsconfig-lint.json src/**/*.ts",
        "docs": "typedoc --options typedoc.json",
        "test:ci": "nyc npm run test -- --reporter=spec",
        "prepublishOnly": "npm run build && npm run test"
    },
    "dependencies": {
        "request": "~2.88.2",
        "request-promise-native": "~1.0.8"
    },
    "devDependencies": {
        "@types/chai": "~4.2.9",
        "@types/mocha": "~7.0.1",
        "@types/node": "~13.7.1",
        "@types/request": "~2.48.4",
        "@types/request-promise-native": "~1.0.17",
        "@types/sinon": "~7.5.1",
        "chai": "~4.2.0",
        "mocha": "~7.0.1",
        "nock": "~12.0.1",
        "nodemon": "~2.0.2",
        "nyc": "~15.0.0",
        "sinon": "~8.1.1",
        "ts-node": "~8.6.2",
        "tslint": "~6.0.0",
        "typedoc": "~0.16.9",
        "typescript": "~3.7.5"
    },
    "peerDependencies": {
        "@donmahallem/trapeze-api-types": ">=2.0.0"
    },
    "nyc": {
        "include": [
            "src/*.ts",
            "src/**/*.ts"
        ],
        "exclude": [
            "typings",
            "src/**/*.spec.ts",
            "**/*.d.ts"
        ],
        "extension": [
            ".ts"
        ],
        "require": [
            "ts-node/register"
        ],
        "reporter": [
            "json",
            "html",
            "text-summary",
            "lcov"
        ],
        "sourceMap": true,
        "instrument": true,
        "all": true
    },
    "files": [
        "dist/*",
        "src/*"
    ],
    "homepage": "https://donmahallem.github.io/TrapezeApiClientNode/",
    "author": {
        "name": "donmahallem",
        "email": "donmahallem@users.noreply.github.com",
        "url": "https://github.com/donmahallem"
    },
    "license": "Apache-2.0",
    "bugs": {
        "url": "https://github.com/donmahallem/TrapezeApiClientNode/issues"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/donmahallem/TrapezeApiClientNode.git"
    },
    "engines": {
        "node": ">=8.0.0"
    },
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "lib": [
            "es2017",
            "es7",
            "es6",
            "dom"
        ],
        "declaration": true,
        "outDir": "./dist/",
        "baseUrl": "./src/",
        "strict": true,
        "esModuleInterop": true
    }
}
